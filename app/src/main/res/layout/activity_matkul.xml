<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.e_learning.tugas">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/yuin"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/imageView"
        android:id="@+id/linearLayout3">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UNIVERSITAS ISLAM NEGERI"
            tools:layout_editor_absoluteX="90dp"
            tools:layout_editor_absoluteY="107dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUNAN KALIJAGA"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="173dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOGYAKARTA"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="231dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginRight="75dp"
            android:text="Manajemen Resiko"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="143dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="75dp"
            android:text="Rekayasa Perangkat Lunak"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="231dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="75dp"
            android:text="Sistem Informasi Manajemen"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="63dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="75dp"
            android:text="Kecerdasan Buatan"
            tools:layout_editor_absoluteX="183dp"
            tools:layout_editor_absoluteY="297dp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="75dp"
            android:text="Jaringan Komputer"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="63dp"  />

        <Button
            android:id="@+id/button10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="75dp"
            android:text="Komputer dan Masyarakat"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="63dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout3"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/linearLayout3"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:text="Mata Kuliah"
        android:textSize="30dp" />
</RelativeLayout>


