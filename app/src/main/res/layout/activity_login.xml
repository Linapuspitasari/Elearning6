<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.e_learning.login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:src="@drawable/yuin"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/imageView">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UNIVERSITAS ISLAM NEGERI"
                tools:layout_editor_absoluteX="90sp"
                tools:layout_editor_absoluteY="107sp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUNAN KALIJAGA"
                tools:layout_editor_absoluteX="163sp"
                tools:layout_editor_absoluteY="173sp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOGYAKARTA"
                tools:layout_editor_absoluteX="148sp"
                tools:layout_editor_absoluteY="231sp" />
        </LinearLayout>
    </RelativeLayout>




    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="150sp"
        android:layout_marginRight="100sp"
        android:text="E - Learning"
        tools:layout_editor_absoluteX="117sp"
        tools:layout_editor_absoluteY="164sp" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140sp"
        android:layout_marginRight="100sp"
        android:text="UIN Sunan Kalijaga"
        tools:layout_editor_absoluteX="60sp"
        tools:layout_editor_absoluteY="116sp" />

    <EditText
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100sp"
        android:layout_marginLeft="150sp"
        android:layout_marginRight="100sp"
        android:hint="Username"
        tools:layout_editor_absoluteX="138sp"
        tools:layout_editor_absoluteY="310sp" />

    <EditText
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150sp"
        android:layout_marginRight="100sp"
        android:hint="Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="138sp"
        tools:layout_editor_absoluteY="310sp" />

    <Button
        android:id="@+id/button12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="150sp"
        android:layout_marginRight="100sp"
        android:text="Login"
        tools:layout_editor_absoluteX="138sp"
        tools:layout_editor_absoluteY="310sp" />

</LinearLayout>
